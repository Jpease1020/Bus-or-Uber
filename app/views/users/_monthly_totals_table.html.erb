<h2>Monthly Totals</h2>
<table class="table table-hover" id="monthly-totals">
  <thead>
    <tr>
      <td>Ride Type</td>
      <td>Money Spent</td>
      <td>Time Spent</td>
      <td>Total Distance Travleled</td>
    </tr>
  </thead>
  <tbody>
    <% if @uber_trips %>
      <tr>
        <td>Uber</td>
        <td>$ <%= @uber_trips.uber_trips_total_cost %></td>
        <td><%= distance_of_time_in_words(@uber_trips.uber_trips_total_duration * 60) %></td>
        <td><%= @uber_trips.uber_trips_total_distance %> mi</td>
      </tr>
    <% end %>
    <% if @bus_trips %>
      <tr>
        <td>Bus</td>
        <td>$ <%= @bus_trips.bus_trips_total_cost %></td>
        <td><%= distance_of_time_in_words(@bus_trips.bus_trips_total_duration * 60) %></td>
        <td><%= @bus_trips.bus_trips_total_distance %> mi</td>
      </tr>
    <% end %>
  </tbody>
</table>
