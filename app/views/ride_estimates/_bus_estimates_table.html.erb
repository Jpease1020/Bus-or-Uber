<h1>Bus Estimates</h1>
<table class="table table-hover" id='bus-trips'>
  <thead>
    <tr>
      <td>Ride Type</td>
      <td>Estimate Cost</td>
      <td>Departure Time</td>
      <td>Estimated Arrival Time</td>
      <td>Travel Time</td>
      <td>Travel Distance</td>
    </tr>
  </thead>
  <tbody>

  <% if @google_estimate %>
    <tr id='bus-estimate-id'>
      <td class="g-ride-type">RTD Bus</td>
      <td class="g-ride-cost">$5.20</td>
      <td class="g-ride-departure"><%= @google_estimate.departure_time %></td>
      <td class="g-ride-arrival"><%= @google_estimate.arrival_time %></td>
      <td class="g-ride-duration"><%= @google_estimate.duration %></td>
      <td class="g-ride-distance"><%= @google_estimate.distance %></td>
      <td id='save-google-trip'><button type='button' class='btn btn-primary btn-sm'>Take trip / Save trip</button></td>
    </tr>
  </tbody>
  <% end %>
</table>
