<h1>Uber Estimates</h1>
<table class="table table-hover" id="uber-trips">
  <thead>
    <tr>
      <td>Uber Ride Type</td>
      <td>Estimate Cost</td>
      <td>Estimated Uber Arrival</td>
      <td>Estimate Travel Time</td>
      <td>Travel Distance</td>
      <td>High Estimate</td>
      <td>Low Estimate</td>
      <td>Minimum Cost</td>
    </tr>
  </thead>
  <tbody>
  <% if @uber_estimate %>
        <tr>
          <td class="u-ride-type"><%= @uber_estimate.ride_estimates['localized_display_name'] %></td>
          <td class="u-ride-estimate"><%= @uber_estimate.ride_estimates['estimate'] %></td>
          <td class="u-ride-uber-arrival"><%= @uber_estimate.ride_estimates['uber_arrival'] %></td>
          <td class="u-ride-duration"><%= @uber_estimate.ride_estimates['duration'] %> minutes</td>
          <td class="u-ride-distance"><%= @uber_estimate.ride_estimates['distance'] %> miles</td>
          <td class="u-ride-high-estimate"><%= @uber_estimate.ride_estimates['high_estimate'] %></td>
          <td class="u-ride-low-estimate"><%= @uber_estimate.ride_estimates['low_estimate'] %></td>
          <td class="u-ride-minimum"><%= @uber_estimate.ride_estimates['minimum'] %></td>
          <td id='save-uber-trip'><button type='button' class='btn btn-primary btn-sm'>Take trip / Save trip</button></td>
          <td>
        </tr>
    <% end %>
  </tbody>
</table>
